<%= javascript_tag do %>

 // Create a Container
 container = $("<div>", {class: "container"});

  // Append Container to Body
  $("body").append(container)


  // Create a Box Container
  box = $("<div>", {class: "box"});

  container.append(box);

  // Create a Main
  main = $("<div>", {class: "main"});

  box.append(main);



  // Create a Parent
  parent = $("<div>", {class: "parent"});


  parent.append("<%= escape_javascript(render 'layouts/context/parent_context', :opinion => @opinion.parent_opinion, :discussion => @discussion)%>");


  box.before(parent)

  main.append("<%= escape_javascript(render 'layouts/opinion', :opinion => @opinion, :discussion => @discussion)%>");



  opinionNode = $("#opinion-<%=@opinion.id%> > #children")

  <% @opinion.children.each do |child| %>
  opinionNode.append("<%= escape_javascript(render 'layouts/opinion', :opinion => child, :discussion => @discussion)%>");
  <% end %>


  $('.left-bar').each(function() {
  var h = $(this).parent().height();
  $(this).height(h);
  });
<% end %>