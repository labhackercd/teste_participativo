 <div class="row">
      <div class="col s12">
        <% if opinion.parent_position == "pro" %>
        <div class="card light-green lighten-4">

        <% elsif opinion.parent_position == "against" %>
            <div class="card red lighten-4">


        <% elsif opinion.parent_position == "proposal" %>
            <div class="card amber lighten-4">

        <% elsif opinion.parent_position.nil? %>
            <div class="card  cyan lighten-4">

       <% end %>


      <div class="card-content black-text flow-text">
            <a name="<%=opinion.id%>"></a>
            <span class="card-title"><%= opinion.user.name %></span>

            <div class="section">
              <h5><%= opinion.body %></h5>

             <% if opinion.parent_position == "pro" %>
                  <div class="divider"></div>
                  <h6 class="green-text text-ligthen2">Em concordância com <%= link_to "esta opinião", "##{opinion.parent_opinion.id}" %> de <%= opinion.parent_opinion.user.name%></h6>


             <% elsif opinion.parent_position == "against" %>
                  <div class="divider"></div>
                  <h6 class="red-text text-ligthen2">Em discordância com <%= link_to "esta opinião", "##{opinion.parent_opinion.id}" %> de <%= opinion.parent_opinion.user.name%></h6>

              <% elsif opinion.parent_position == "proposal" %>
                  <div class="divider"></div>
                  <h6 class="orange-text text-darken2"> Proposição com base <%= link_to "nesta opinião", "##{opinion.parent_opinion.id}" %> de <%= opinion.parent_opinion.user.name%></h6>
            <%end%>


            </div>

            <div class="section">
              <a class="btn green lighten-2"><i class="fa fa-thumbs-up"> <%= Opinion.where(parent_opinion_id: opinion.id, parent_position: "pro").count %> </i></a>
              <a class="btn red lighten-2"><i class="fa fa-thumbs-down"> <%= Opinion.where(parent_opinion_id: opinion.id, parent_position: "against").count %> </i></a>
              <a class="btn orange lighten-2"><i class="fa fa-lightbulb-o"> <%= Opinion.where(parent_opinion_id: opinion.id, parent_position: "proposal").count %> </i></a>
            </div>

          </div>

            <%= render "opinions/buttons", opinion: opinion%>


        </div>
      </div>
    </div>